<div class="container">
  <div class="row">
    <div class="col-sm">
      <h2>Burgers that haven't been eaten!</h2>

      <ul>
        {{#each burgers}}
        {{#unless eaten}}
        {{> burgers/burger-block sleep=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm">
      <h2>Burgers that have been eaten!</h2>

      <ul>
        {{#each burgers}}
        {{#if eaten}}
        {{> burgers/burger-block sleep=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-12 mx-auto">
      <div class="text-center">
        <h2>Add a burger</h2>
        <form class="create-form">

          <div class="form-group pl-5">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
          </div>

          <div class="form-group pl-5">
            <label for="eaten">Eaten? </label>
            <input type="radio" name="eaten" value="1" checked> Eaten!
            <input type="radio" name="eaten" value="0"> Not Eaten
          </div>

          <button type="submit">Add burger</button>
        </form>
      </div>
    </div>
  </div>
</div>